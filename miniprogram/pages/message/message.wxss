/* pages/message/message.wxss */
.head{
  position: relative;
  height: 30vh;
  margin: 0 0 50px 0;
}
.bg{
  float: left;
  width: 100%;
  filter: blur(1px)
}
.headpic{
  width: 100px;
  height: 100px;
  position: absolute;
  border-radius: 8px; 
  top: 15%;
  left: 40%;
}
.publish{
  position: absolute;
  top: 70%;
  left: 45%;
  margin: auto
}
.messagelist{
  margin:10px 35px;
  padding: 10px;
  box-shadow: 3px 3px 10px #ccc;
  
}
.user-icon image{
  float: left;
  width: 30px;
  height: 30px;
  border-radius: 50% 
}
.nickName{
  float: left;
  margin: 10px;
}
.content{
  clear: both;
  width: 80vw;
  margin-left: 30px
}
.content .text-content{
  width: 68vw;
  word-wrap:break-word;
  padding: 5px
}
.image-list{
  display: flex;
 flex-wrap: wrap;
}
.image-list image{
  width: 85px;
  height: 85px;
  margin: 5px
}
.detail{
  margin: 2px 0 2px 5px
}
.detail .time{
 display: inline-block;
 float: left;
  font-size: 12px;
  color: rgba(36, 37, 37, 0.5)
}
.icon-good{
  float: right;
  margin-right: 5px; 
}
.icon-good image,.icon-favorite image{
  width: 20px;
  height: 20px;
}
.icon-favorite{
  float: right;
  margin-right: 5px; 
}


page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
}
.item{
  width: 100%;
  margin-bottom: 30rpx;  
}


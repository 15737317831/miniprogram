}

.txt{
  width: 98%;
  line-height: 50rpx;
  text-align: left;
  padding-left: 20rpx;
  padding-right: 30rpx;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-wrap;
}



.img{
